<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rirsas.user.dinnerselect.MainActivity"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today&apos;s Menu..."
        android:id="@+id/txtTerm"
        android:layout_marginBottom="60dp"
        android:layout_alignBottom="@+id/txtResult"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Menu"
        android:id="@+id/btnSelect"
        android:layout_marginBottom="88dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/frame_layout_button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtResult"
        android:layout_marginTop="107dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="35dp"
        android:background="@drawable/frame_layout"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move To Setting"
        android:id="@+id/btnMoveSetting"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/frame_layout_button"
        />
</RelativeLayout>
